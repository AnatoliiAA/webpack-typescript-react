{
    "compilerOptions": {
      "outDir": "./public/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }